<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">
  
  <servers>
    <server>
      <id>${NEXUS_SNAP_REPO}</id>
      <username>${NEXUS_CREDS_USR}</username>
      <password>${NEXUS_CREDS_PSW}</password>      
    </server>
    <server>    
      <id>${NEXUS_RELEASE_REPO}</id>
      <username>${NEXUS_CREDS_USR}</username>
      <password>${NEXUS_CREDS_PSW}</password>
    </server>
    <server>
      <id>${NEXUS_CENTRAL_REPO}</id>
      <username>${NEXUS_CREDS_USR}</username>
      <password>${NEXUS_CREDS_PSW}</password>
    </server>
    <server>
      <id>${NEXUS_GRP_REPO}</id>
      <username>${NEXUS_CREDS_USR}</username>
      <password>${NEXUS_CREDS_PSW}</password>
    </server>                
  </servers>

  <mirrors>
    <mirror>
      <id>${NEXUS_GRP_REPO}</id>
      <name>${NEXUS_GRP_REPO}</name>
      <url>${NEXUS_URL}/repository/${NEXUS_GRP_REPO}/</url>
      <mirrorOf>*</mirrorOf>
    </mirror>
  </mirrors>

  <pluginGroups>
    <pluginGroup>org.sonarsource.scanner.maven</pluginGroup>
  </pluginGroups>
  
  <profiles>
      <profile>
          <id>sonar</id>
          <activation>
              <activeByDefault>true</activeByDefault>
          </activation>    
      </profile>
  </profiles>

</settings>
